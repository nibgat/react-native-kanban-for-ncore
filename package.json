{
  "name": "react-native-kanban-for-ncore",
  "version": "1.0.2",
  "description": "NİBGAT® | NCore Mobile Component Library",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/nibgat/ncore-mobile",
  "author": "nibgat <contact@nibgat.com> (https://www.nibgat.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nibgat/ncore-mobile/issues"
  },
  "homepage": "https://github.com/nibgat/ncore-mobile#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "11.0.0",
    "@react-native-community/eslint-config": "2.0.0",
    "@release-it/conventional-changelog": "2.0.0",
    "@types/jest": "26.0.0",
    "@types/react": "16.9.19",
    "@types/react-native": "0.62.13",
    "commitlint": "11.0.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "6.0.0",
    "jest": "26.0.1",
    "pod-install": "0.1.0",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "0.18.0",
    "release-it": "14.2.2",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "immer": "9.0.12",
    "react-native-gesture-handler": "2.3.2",
    "react-native-modalize": "2.0.13",
    "react-native-portalize": "1.0.7",
    "react-native-simple-toast": "1.1.3",
    "react-native-svg": "12.3.0"
  },
  "peerDependencies": {
    "react": ">= 16.13.1",
    "react-native": ">= 0.63.4",
    "react-native-gesture-handler": ">= 2.3.2",
    "react-native-modalize": ">= 2.0.13",
    "react-native-portalize": ">= 1.0.7",
    "react-native-svg": ">= 12.3.0",
    "react-native-simple-toast": ">= 1.1.3",
    "ncore-mobile": ">= 1.0.1"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "object-curly-newline": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        4
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": "error",
      "prettier/prettier": 0
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
